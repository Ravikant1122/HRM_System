<div class="login-box">

    @*<div class="login-logo">
        <a href="index.html"><img src="contant/img/logo.png" alt="cotgin analytics"></a>
    </div>*@
    
    <div class="card">
        <div class="card-body login-card-body">
            <h2 class="text-center mb-4">Register</h2>
            <p class="form_submission"></p>

            <form id="registrationForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="mt-3 row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-6">
                        <label for="fname">First Name</label>
                        <div class="input-group">
                            <input name="fname" id="fname" type="text" class="form-control" placeholder="First Name" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <span class="text-danger" id="fname_error">First Name is invalid</span>
                    </div>

                    <div class="col-6">
                        <label for="lname">Last Name</label>
                        <div class="input-group">
                            <input name="lname" id="lname" type="text" class="form-control" placeholder="Last Name" />
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        <span class="text-danger" id="lname_error">Last Name is invalid</span>
                    </div>
                </div>

                <div class="mt-3">
                    <label asp-for="Input.Email"></label>
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <label asp-for="Input.Password"></label>
                    <div class="input-group">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-eye"></span>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <div class="input-group">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-eye"></span>
                        </div>
                        </div>
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="row mt-5 mb-4">
                    <div class="col-12">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </div>
                   
                </div>
            </form>

            <p class="mb-0 text-center">
                Already have an account? <a href="login.html" class="text-center theme-color">Login</a>
            </p>

        </div>
       
    </div>
</div>







@section Scripts {
    <partial name="_ValidationScriptsPartial" />
